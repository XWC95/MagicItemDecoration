<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xwc.example.MainActivity">

    <Button
        android:id="@+id/btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LinearLayoutManager"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GridLayoutManager"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_linear" />

    <Button
        android:id="@+id/btn_custom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CustomLinearLayoutManager"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_grid" />

    <Button
        android:id="@+id/btn_custom_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CustomGridLayoutManager"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_custom_linear" />

</android.support.constraint.ConstraintLayout>
